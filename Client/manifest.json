{
    "manifest_version": 3,
    "name": "YouTube Comment Sentiment Analyzer",
    "version": "1.0",
    "description": "Minimal sentiment analysis for YouTube comments",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "https://www.youtube.com/*"
    ],
    "action": {
        "default_popup": "index.html",
        "default_title": "YouTube Sentiment Analyzer",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}