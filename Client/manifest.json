{
    "manifest_version": 3,
    "name": "YouTube Comment Sentiment Analyzer",
    "version": "1.0",
    "description": "Minimal sentiment analysis for YouTube comments",
    "permissions": [
        "activeTab",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "https://www.youtube.com/*",
        "http://localhost:5000/*"
    ],
    "action": {
        "default_popup": "index.html",
        "default_title": "YouTube Sentiment Analyzer"
    }
}